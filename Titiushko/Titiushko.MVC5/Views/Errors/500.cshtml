@{
    ViewBag.Title = Titiushko.Resources.Resource.TextError500Title;
    Layout = ViewBag.Layout;
}
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12"></div>
    <div class="col-md-6 col-md-6 col-sm-6 col-xs-12">
        <div class="content-error">
            <h1>ERROR <span class="counter"> 500</span></h1>
            <h2>@Titiushko.Resources.Resource.TextError500Title</h2>
            <p>@Titiushko.Resources.Resource.TextError500Message</p>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12"></div>
</div>
<br />
<br />
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12"></div>
    <div class="col-md-6 col-md-6 col-sm-6 col-xs-12">
        <div class="btn-group pull-right">
            @if (ViewBag.Layout == null)
            {
                <a class="btn btn-sm btn-default" onclick="alertify.closeAll();"><i class="fa fa-times-circle"></i> Cerrar</a>
            }
            else
            {
                <div class="btn-group">
                    <a class="btn btn-sm btn-danger" href="@Url.Action(Titiushko.MVC5.Constants.Names.ActionName.INDEX, "home")"><i class="fa fa-home"></i> @Titiushko.Resources.Resource.ModuleHomeName</a>
                    <a class="btn btn-sm btn-default" id="BackPreviousPage"><i class="fa fa-reply"></i> Volver</a>
                </div>
            }
        </div>
    </div>
</div>