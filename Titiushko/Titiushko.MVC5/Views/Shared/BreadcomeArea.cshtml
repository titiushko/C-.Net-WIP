@using Titiushko.MVC5.Models;

@{
    BreadcomeArea BreadcomeArea = ViewBag.BreadcomeArea;
}

<div class="breadcome-area">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <h1 class="text-white">@BreadcomeArea.Title</h1>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                            <ul class="breadcome-menu">
                                <li>
                                    @if (BreadcomeArea.Level1 != null)
                                    {
                                        @Html.ActionLink(Titiushko.Resources.Resource.ModuleHomeName, Titiushko.MVC5.Constants.Names.ActionName.INDEX, "home")
                                        <span class="bread-slash">/</span>
                                    }
                                    else
                                    {
                                        <span>Home</span>
                                    }
                                </li>
                                @if (BreadcomeArea.Level1 != null)
                                {
                                    if (BreadcomeArea.Level2 != null)
                                    {
                                        <li>
                                            @BreadcomeArea.Level1
                                            <span class="bread-slash">/</span>
                                        </li>
                                        <li>
                                            <span class="bread-blod">@BreadcomeArea.Level2</span>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <span class="bread-blod">@BreadcomeArea.Level1</span>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>