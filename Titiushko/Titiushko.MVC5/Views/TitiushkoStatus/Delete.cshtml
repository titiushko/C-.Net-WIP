@model Titiushko.MVC5.Models.TitiushkoStatus

@{
    ViewBag.Title = ViewBag.BreadcomeArea.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@string.Format(Titiushko.Resources.Resource.TextConfirmDelete, Titiushko.Resources.Resource.ModuleStatusName)</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        <div class="btn-group">
            <button type="button" class="btn btn-danger" id="@string.Format("{0}{1}", Titiushko.MVC5.Constants.Names.ActionName.DELETE, Titiushko.Resources.Resource.ModuleStatusName)"><i class="fa fa-trash"></i> @Titiushko.Resources.Resource.TextDelete</button>
            @Html.ActionLink(Titiushko.Resources.Resource.TextBackToList, Titiushko.MVC5.Constants.Names.ActionName.INDEX, null, new { @class = "btn btn-default" })
        </div>
    }
</div>
@section Scripts {
    <script type="text/javascript">
        $("#@string.Format("{0}{1}", Titiushko.MVC5.Constants.Names.ActionName.DELETE, Titiushko.Resources.Resource.ModuleStatusName)").click(function (event) {
            event.preventDefault();
            Titiushko.DeleteRecord.Execute({
                titleName: "@Titiushko.Resources.Resource.ModuleStatusName"
            });
        });
    </script>
}